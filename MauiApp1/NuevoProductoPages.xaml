<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.NuevoProductoPage"
             Title="NuevoProductoPage">
    <VerticalStackLayout>
        <TableView>
            <TableRoot>
                <TableSection Title="Nuevo Producto">
                    <EntryCell x:Name="Nombre"
                       Placeholder="Nombre"/>
                    <EntryCell x:Name="Cantidad"
                        Placeholder="Cantidad"
                       Keyboard="Numeric"/>
                    <EntryCell x:Name="Descripcion"
                        Placeholder="Descripcion"/>
                </TableSection>
            </TableRoot>
        </TableView>
        <Button
        x:Name="CrearProductoBtn"
        Clicked="OnClickGuardarProducto"
        Text="Nuevo Producto"
        Margin="15"
        HorizontalOptions="Fill"
    />
    </VerticalStackLayout>
</ContentPage>